<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset
		name="authentication"
		label="COM_BLASTCHATC_BLASTCHATC_FIELD_AUTHENTICATION_LABEL"
		description="COM_BLASTCHATC_BLASTCHATC_FIELD_AUTHENTICATION_DESC"
	>
		<field
			name="url"
			type="text"
			size="100"
			label="COM_BLASTCHATC_BLASTCHATC_FIELD_URL_LABEL"
			description="COM_BLASTCHATC_BLASTCHATC_FIELD_URL_DESC"
			default=""
		>
		</field>
		<field
			name="intraid"
			type="text"
			size="100"
			label="COM_BLASTCHATC_BLASTCHATC_FIELD_INTRAID_LABEL"
			description="COM_BLASTCHATC_BLASTCHATC_FIELD_INTRAID_DESC"
			default=""
		>
		</field>
		<field
			name="privkey"
			type="text"
			size="100"
			label="COM_BLASTCHATC_BLASTCHATC_FIELD_PRIVKEY_LABEL"
			description="COM_BLASTCHATC_BLASTCHATC_FIELD_PRIVKEY_DESC"
			default=""
		>
		</field>
	</fieldset>
	<fieldset
		name="configuration"
		label="COM_BLASTCHATC_BLASTCHATC_FIELD_CONFIGURATION_LABEL"
		description="COM_BLASTCHATC_BLASTCHATC_FIELD_CONFIGURATION_DESC"
	>
		<field
			name="type"
			type="list"
			label="COM_BLASTCHATC_BLASTCHATC_FIELD_TYPE_LABEL"
			description="COM_BLASTCHATC_BLASTCHATC_FIELD_TYPE_DESC"
			default="chat"
		>
			<option value="chat">COM_BLASTCHATC_BLASTCHATC_FIELD_TYPE_CHAT</option>
			<option value="shout">COM_BLASTCHATC_BLASTCHATC_FIELD_TYPE_SHOUTBOX</option>
		</field>
		<field
			name="intf"
			type="list"
			label="COM_BLASTCHATC_BLASTCHATC_FIELD_INTERFACE_LABEL"
			description="COM_BLASTCHATC_BLASTCHATC_FIELD_INTERFACE_DESC"
			default="st"
		>
			<option value="st">COM_BLASTCHATC_BLASTCHATC_FIELD_INTERFACE_STANDARD</option>
			<option value="vi">COM_BLASTCHATC_BLASTCHATC_FIELD_INTERFACE_IMPAIRED</option>
			<option value="md">COM_BLASTCHATC_BLASTCHATC_FIELD_INTERFACE_MOBILE</option>
		</field>
		<field
			name="width"
			type="text"
			label="COM_BLASTCHATC_BLASTCHATC_FIELD_WIDTH_LABEL"
			description="COM_BLASTCHATC_BLASTCHATC_FIELD_WIDTH_DESC"
			default="100%"
		>
		</field>
		<field
			name="height"
			type="text"
			label="COM_BLASTCHATC_BLASTCHATC_FIELD_HEIGHT_LABEL"
			description="COM_BLASTCHATC_BLASTCHATC_FIELD_HEIGHT_DESC"
			default="480"
		>
		</field>
		<field
			name="frame_border"
			type="list"
			label="COM_BLASTCHATC_BLASTCHATC_FIELD_FRAMEBORDER_LABEL"
			description="COM_BLASTCHATC_BLASTCHATC_FIELD_FRAMEBORDER_DESC"
			default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="mwidth"
			type="text"
			label="COM_BLASTCHATC_BLASTCHATC_FIELD_MWIDTH_LABEL"
			description="COM_BLASTCHATC_BLASTCHATC_FIELD_MWIDTH_DESC"
			default="0"
		>
		</field>
		<field
			name="mheight"
			type="text"
			label="COM_BLASTCHATC_BLASTCHATC_FIELD_MHEIGHT_LABEL"
			description="COM_BLASTCHATC_BLASTCHATC_FIELD_MHEIGHT_DESC"
			default="0"
		>
		</field>
	</fieldset>
</config>
